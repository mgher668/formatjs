{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react",
    // If a package choose to use Mocha, they will have to explicit declare in their tsconfig.json.
    "types": ["node", "jest"]
  }
}
